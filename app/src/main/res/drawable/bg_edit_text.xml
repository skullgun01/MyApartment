<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:tools="http://schemas.android.com/tools" xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_focused="true">
        <shape android:shape="rectangle">
            <corners android:radius="@dimen/radius_edit_text" />
            <solid android:color="@color/white" />
            <padding
                android:left="@dimen/padding_edit_text_horizontal"
                android:right="@dimen/padding_edit_text_horizontal"
                android:bottom="@dimen/padding_edit_text_vertical"
                android:top="@dimen/padding_edit_text_vertical"/>
            <stroke
                android:color="@color/red_base"
                android:width="1dp" />
        </shape>
    </item>

    <item >
        <shape android:shape="rectangle">
            <corners android:radius="@dimen/radius_edit_text" tools:ignore="StateListReachable" />
            <solid android:color="@color/white" />
            <padding
                android:left="@dimen/padding_edit_text_horizontal"
                android:right="@dimen/padding_edit_text_horizontal"
                android:bottom="@dimen/padding_edit_text_vertical"
                android:top="@dimen/padding_edit_text_vertical"/>
            <stroke
                android:color="@color/red_base"
                android:width="1dp" />
        </shape>
    </item>

    <item android:state_enabled="false" tools:ignore="StateListReachable">
        <shape android:shape="rectangle">
            <corners android:radius="@dimen/radius_edit_text" />
            <solid android:color="@color/dismiss" />
            <padding
                android:left="@dimen/padding_edit_text_horizontal"
                android:right="@dimen/padding_edit_text_horizontal"
                android:bottom="@dimen/padding_edit_text_vertical"
                android:top="@dimen/padding_edit_text_vertical"/>
            <stroke
                android:color="@color/red_base"
                android:width="1dp" />
        </shape>
    </item>

</selector>