<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tools="http://schemas.android.com/tools">

    <item android:state_focused="true">
        <shape android:shape="rectangle">
            <corners android:radius="@dimen/radius_edit_text" />
            <solid android:color="@color/white" />
            <padding android:bottom="@dimen/padding_edit_text_vertical" android:left="@dimen/padding_edit_text_horizontal" android:right="@dimen/padding_edit_text_horizontal" android:top="@dimen/padding_edit_text_vertical" />
            <stroke android:width="1dp" android:color="@color/red_base" />
        </shape>
    </item>

    <item android:state_enabled="true">
        <shape android:shape="rectangle">
            <corners android:radius="@dimen/radius_edit_text" />
            <solid android:color="@color/white" />
            <padding android:bottom="@dimen/padding_edit_text_vertical" android:left="@dimen/padding_edit_text_horizontal" android:right="@dimen/padding_edit_text_horizontal" android:top="@dimen/padding_edit_text_vertical" />
            <stroke android:width="1dp" android:color="@color/red_base" />
        </shape>
    </item>

    <item android:state_enabled="false">
        <shape android:shape="rectangle">
            <corners android:radius="@dimen/radius_edit_text" />
            <solid android:color="@color/dismiss" />
            <padding android:bottom="@dimen/padding_edit_text_vertical" android:left="@dimen/padding_edit_text_horizontal" android:right="@dimen/padding_edit_text_horizontal" android:top="@dimen/padding_edit_text_vertical" />
            <stroke android:width="1dp" android:color="@color/red_base" />
        </shape>
    </item>

</selector>