<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <corners android:radius="@dimen/radius_edit_text" />
            <solid android:color="@color/green_pressed" />
            <padding android:bottom="@dimen/padding_4dp" android:left="@dimen/padding_32dp" android:right="@dimen/padding_32dp" android:top="@dimen/padding_4dp" />
        </shape>
    </item>
    <item android:state_enabled="false">
        <shape android:shape="rectangle">
            <corners android:radius="@dimen/radius_edit_text" />
            <solid android:color="@color/dismiss" />
            <padding android:bottom="@dimen/padding_4dp" android:left="@dimen/padding_32dp" android:right="@dimen/padding_32dp" android:top="@dimen/padding_4dp" />
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="@dimen/radius_edit_text" />
            <solid android:color="@color/green_base" />
            <padding android:bottom="@dimen/padding_4dp" android:left="@dimen/padding_32dp" android:right="@dimen/padding_32dp" android:top="@dimen/padding_4dp" />
        </shape>
    </item>

</selector>